                    <div class="card equipment-card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">${item.name}</h5>
                                <span class="status-badge status-${item.status}">${item.status}</span>
                            </div>
                            <p class="card-text text-muted mb-2"><strong>ID:</strong> ${item.id}</p>
                            <p class="card-text mb-2"><strong>Category:</strong> ${item.category}</p>
                            <p class="card-text mb-2"><strong>Location:</strong> ${item.location}</p>
                            <p class="card-text mb-2"><strong>Quantity:</strong> ${item.quantity}</p>
                            <p class="card-text mb-3"><strong>Value:</strong> ${item.value}</p>
                            <p class="card-text mb-1"><strong>Next Maintenance:</strong> ${item.nextMaintenance}</p>
                            
                            <div class="d-flex justify-content-between align-items-center mb-2 mt-3">
                                <small class="text-muted">Condition</small>
                                <small>${item.condition}%</small>
                            </div>
                            <div class="progress mb-4">
                                <div class="progress-bar" 
                                     role="progressbar" 
                                     style="width: ${item.condition}%; background-color: ${getConditionColor(item.condition)}" 
                                     aria-valuenow="${item.condition}" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100">
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                <button class="btn btn-sm btn-outline-primary" onclick="showEquipmentDetail('${item.id}')">
                                    <i class="fas fa-info-circle me-1"></i> Details
                                </button>
                                <button class="btn btn-sm btn-outline-warning">
                                    <i class="fas fa-wrench me-1"></i> Maintain
                                </button>
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-bell me-1"></i> Alert
                                </button>
                            </div>
                        </div>
                    </div>
                `;
                container.appendChild(card);
            });
        }

        // Function to render maintenance schedule
        function renderMaintenanceSchedule(maintenanceList) {
            const container = document.getElementById('maintenanceList');
            container.innerHTML = '';
            
            if (maintenanceList.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-4">
                        <i class="fas fa-calendar-times fa-2x text-muted mb-3"></i>
                        <h5>No maintenance scheduled</h5>
                        <p class="text-muted">Add new maintenance schedule to get started</p>
                    </div>
                `;
                return;
            }
            
            maintenanceList.forEach(item => {
                const maintenanceItem = document.createElement('div');
                maintenanceItem.className = 'maintenance-item';
                maintenanceItem.innerHTML = `
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h5>${item.equipment}</h5>
                            <p class="mb-1">${item.id} - ${item.location}</p>
                            <span class="badge bg-secondary">${item.type}</span>
                        </div>
                        <span class="badge ${item.status === 'Scheduled' ? 'bg-success' : 'bg-warning'}">${item.status}</span>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-calendar-check me-2 text-success"></i>
                                <div>
                                    <small class="text-muted d-block">Next Maintenance</small>
                                    <strong>${item.nextDate}</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-history me-2 text-secondary"></i>
                                <div>
                                    <small class="text-muted d-block">Last Maintenance</small>
                                    <strong>${item.lastDate}</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3 d-flex justify-content-end">
                        <button class="btn btn-sm btn-outline-success me-2">
                            <i class="fas fa-check-circle me-1"></i> Complete
                        </button>
                        <button class="btn btn-sm btn-outline-secondary me-2">
                            <i class="fas fa-calendar-alt me-1"></i> Reschedule
                        </button>
                        <button class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash-alt me-1"></i> Cancel
                        </button>
                    </div>
                `;
                container.appendChild(maintenanceItem);
            });
        }

        // Function to render alerts
        function renderAlerts(alertList) {
            const container = document.getElementById('alertList');
            container.innerHTML = '';
            
            if (alertList.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-4">
                        <i class="fas fa-check-circle fa-2x text-success mb-3"></i>
                        <h5>No critical alerts</h5>
                        <p class="text-muted">All systems are operating normally</p>
                    </div>
                `;
                return;
            }
            
            alertList.forEach((item, index) => {
                const alertItem = document.createElement('div');
                alertItem.className = 'alert-item';
                alertItem.innerHTML = `
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <h5 class="mb-1">${item.equipment}</h5>
                            <p class="mb-0">${item.issue}: ${item.current} (Critical: ${item.critical})</p>
                        </div>
                        <span class="badge ${item.priority === 'High' ? 'bg-danger' : 'bg-warning'}">${item.priority} Priority</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="alert-${index}" ${item.resolved ? 'checked' : ''}>
                            <label class="form-check-label" for="alert-${index}">
                                Mark as resolved
                            </label>
                        </div>
                        <div>
                            <button class="btn btn-sm btn-outline-danger me-2">
                                <i class="fas fa-bell me-1"></i> Notify Team
                            </button>
                            <button class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-file-alt me-1"></i> Create Order
                            </button>
                        </div>
                    </div>
                `;
                container.appendChild(alertItem);
                
                // Add event listener for checkbox
                const checkbox = alertItem.querySelector(`#alert-${index}`);
                checkbox.addEventListener('change', function() {
                    alertData[index].resolved = this.checked;
                    if (this.checked) {
                        alertItem.style.opacity = '0.7';
                        alertItem.style.borderLeftColor = '#28a745';
                    } else {
                        alertItem.style.opacity = '1';
                        alertItem.style.borderLeftColor = 'var(--accent)';
                    }
                });
            });
        }

        // Function to update dashboard stats
        function updateDashboardStats() {
            document.getElementById('totalItems').textContent = equipmentData.length;
            
            const operationalCount = equipmentData.filter(e => e.status === 'operational').length;
            document.getElementById('operationalCount').textContent = operationalCount;
            
            const criticalCount = equipmentData.filter(e => e.status === 'critical').length + 
                                 alertData.filter(a => !a.resolved).length;
            document.getElementById('criticalCount').textContent = criticalCount;
            
            // Calculate total value (simplified)
            const totalValue = equipmentData.reduce((sum, item) => {
                const value = parseFloat(item.value.replace(/[^0-9.]/g, ''));
                return sum + value;
            }, 0);
            document.getElementById('totalValue').textContent = `$${(totalValue / 1000000).toFixed(1)}M`;
        }

        // Helper function to get condition color
        function getConditionColor(percent) {
            if (percent >= 80) return '#2d9d78';
            if (percent >= 50) return '#e9b949';
            return '#e63946';
        }

        // Function to show equipment details
        function showEquipmentDetail(equipmentId) {
            const equipment = equipmentData.find(e => e.id === equipmentId);
            if (equipment) {
                document.getElementById('detailEquipmentName').textContent = equipment.name;
                document.getElementById('detailId').textContent = equipment.id;
                document.getElementById('detailStatus').textContent = equipment.status;
                document.getElementById('detailStatus').className = `status-badge status-${equipment.status}`;
                document.getElementById('detailCategory').textContent = equipment.category;
                document.getElementById('detailLocation').textContent = equipment.location;
                document.getElementById('detailQuantity').textContent = equipment.quantity;
                document.getElementById('detailValue').textContent = equipment.value;
                document.getElementById('detailConditionValue').textContent = `${equipment.condition}%`;
                document.getElementById('detailConditionBar').style.width = `${equipment.condition}%`;
                document.getElementById('detailConditionBar').style.backgroundColor = getConditionColor(equipment.condition);
                document.getElementById('detailLastMaintenance').textContent = equipment.lastMaintenance;
                document.getElementById('detailNextMaintenance').textContent = equipment.nextMaintenance;
                
                const modal = new bootstrap.Modal(document.getElementById('equipmentDetailModal'));
                modal.show();
            }
        }

        // Search and filter functionality
        function filterEquipment() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const category = document.getElementById('categoryFilter').value;
            const status = document.getElementById('statusFilter').value;
            
            const filteredEquipment = equipmentData.filter(item => {
                const matchesSearch = item.name.toLowerCase().includes(searchTerm) || 
                                      item.id.toLowerCase().includes(searchTerm);
                const matchesCategory = category ? item.category === category : true;
                const matchesStatus = status ? item.status === status : true;
                
                return matchesSearch && matchesCategory && matchesStatus;
            });
            
            renderEquipmentCards(filteredEquipment);
        }

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            renderEquipmentCards(equipmentData);
            renderMaintenanceSchedule(maintenanceData);
            renderAlerts(alertData);
            updateDashboardStats();
            
            // Add event listeners for filters
            document.getElementById('searchInput').addEventListener('input', filterEquipment);
            document.getElementById('categoryFilter').addEventListener('change', filterEquipment);
            document.getElementById('statusFilter').addEventListener('change', filterEquipment);
        });

        // Simulate data updates (in a real app, this would come from the server)
        setInterval(() => {
            // Randomly update some equipment condition values
            equipmentData.forEach(equip => {
                if (Math.random() > 0.7) {
                    const change = Math.floor(Math.random() * 5) - 2;
                    equip.condition = Math.max(10, Math.min(100, equip.condition + change));
                }
            });
            
            // Update the display
            renderEquipmentCards(equipmentData);
            updateDashboardStats();
        }, 10000); // Update every 10 seconds
    </script>
</body>
